app = "leapfound-app-naijal"
primary_region = "lhr"

[build]
  # Using our Dockerfile

[env]

[mounts]
  source="projectz_data"
  destination="/app/projectz_data"
  PORT = "8000"

[http_service]
  internal_port = 8000
  force_https = true
  auto_stop_machines = false
  auto_start_machines = true
  min_machines_running = 2
  processes = ["app"]

  [http_service.concurrency]
    type = "requests"
    hard_limit = 100
    soft_limit = 80

  [[http_service.checks]]
    interval = "5s"
    timeout = "2s"
    grace_period = "10s"
    method = "GET"
    path = "/health"
    protocol = "http"

[mounts]
  source = "projectz_data"
  destination = "/app/projectz_data"
